mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, alt)
  img(src=require(`images/${path}`) class=className alt=alt)



mixin phone(mod)
  div(class=`phone phone--${mod}`)
    a(class=`phone__number phone__number--${mod}` href="tel:+79229105895") +7 (922) 910 58-95
    .phone__callback-wrap
      a(class=`phone__callback phone__callback--${mod}` href="#") Обратный звонок

mixin button(type, mod, mode, text)
  button(type=`${type}`, class=`button button--${mod} ${mode}`)= text

