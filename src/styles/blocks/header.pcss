.header {
    padding: 30px 0;
}

.container--header {
    display: flex;
    justify-content: space-between;
}

.header__logo {
    width: 136px;
}

.header__information {
    display: flex;
    flex-direction: column;
    width: 40%;
    margin-top: 5px;
}






.phone--header {
    .phone__number {
        line-height: 1;
        margin-bottom: 30px;
    }
    .phone__callback {

        text-align: right;
    }
}
